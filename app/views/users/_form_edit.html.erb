<div class="d-flex justify-content-center">
  <div class="col-4">
    <%= form_with model: @user do |f|%>
      <div>
        <div class="mb-3">
          <%= f.label :name, style: "display: block",class: 'form-label' %>
          <%= f.text_field :name,class: 'form-control' %>
        </div>
    
        <div class="mb-3">
          <%= f.label :email, style: "display: block",class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
    <span style="color: red;"><%= @user.errors[:email].first if @user.errors.any? %></span>
        <div class="mb-3">
          <%= f.label :password, style: "display: block",class: 'form-label' %>
          <%= f.password_field :password,class: 'form-control' %>
        </div>
      <span style="color: red;"><%= @user.errors[:password].first if @user.errors.any? %></span>
        <div class="mb-3">
          <%= f.label :confirmpassword, style: "display: block",class: 'form-label' %>
          <%= f.password_field :password_confirmation,class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :address, style: "display: block",class: 'form-label' %>
          <%= f.text_field :address,class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :avatar, style: "display: block",class: 'form-label' %>
          <%= f.text_field :avatar,class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :phone, style: "display: block",class: 'form-label' %>
          <%= f.text_field :phone,class: 'form-control' %>
        </div>
    <span style="color: red;"><%= @user.errors[:phone].first if @user.errors.any? %></span>
        <%= f.submit 'Complete', class: 'btn btn-success w-100' %>
      </div>
    <% end %>
  </div>
</div>
