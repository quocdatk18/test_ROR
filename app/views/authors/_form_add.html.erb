<div class='d-flex justify-content-center'>
<div class='col-4'>
  <%= form_with model: @author do |f|%>
    <div>
      <div class='mb-3'>
        <%= f.label :first_name, style: 'display: block',class: 'form-label' %>
        <%= f.text_field :first_name,class: 'form-control' %>
      </div>
  
      <div class='mb-3'>
        <%= f.label :last_name, style: 'display: block',class: 'form-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>
  
      <div class='mb-3'>
        <%= f.label :title, style: 'display: block',class: 'form-label' %>
        <%= f.text_field :title,class: 'form-control' %>
      </div>
      
      <%= f.submit 'Complete', class: 'btn btn-success w-100' %>
    </div>
  <% end %>
</div>
</div>
