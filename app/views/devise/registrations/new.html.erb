<div class='authentica'>
<div class= 'sub_authentica'>
<h2 class='text-center titles'>Sign up</h2>
<%= form_for(@user, url: registration_path(@user)) do |f| %>

  <div class='form-group'>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
  <span style='color: red;'><%= resource.errors[:email].first if resource.errors.any? %></span>
  <div class='form-group'>
    <%= f.label :user_name %>
    <%= f.text_field :user_name, class: 'form-control' %>
  </div>
 
  <div class='form-group'>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
  </div>
  <span style='color: red;'><%= resource.errors[:password].first if resource.errors.any? %></span>
  <div class='form-group'>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
  </div>
  <span style='color: red;'><%= resource.errors[:password_confirmation].first if resource.errors.any? %></span>
  <div class='form-group'>
    <%= f.label :phone %>
    <%= f.telephone_field :phone, class: 'form-control' %>
  </div>
  <span style='color: red;'><%= resource.errors[:phone].first if resource.errors.any? %></span>
  <div class='actions'>
    <%= f.submit 'Sign up', class: 'btn btn-primary w-100' %>
  </div>
<% end %>
 
<%= render 'devise/shared/links' %>
</div>
</div>