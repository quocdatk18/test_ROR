<div class='authentica'>
<div class= 'sub_authentica'>
<h2 class='text-center titles'>Forgot your password?</h2>
<span class='span'>Please enter your email to search for your account</span>
<%= form_for(resource, as: resource_name, url: user_password_path, html: { method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='field'>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email',class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Send', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render 'devise/shared/links' %>
</div>
</div>
