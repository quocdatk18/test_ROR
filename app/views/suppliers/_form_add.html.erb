<div class='d-flex justify-content-center'>
  <div class='col-4'>
    <%= form_with model: @supplier do |f|%>
      <div>
        <div class='mb-3'>
          <%= f.label :name, style: 'display: block',class: 'form-label' %>
          <%= f.text_field :name,class: 'form-control' %>
        </div>
        
        <%= f.submit 'Complete', class: 'btn btn-success w-100' %>
      </div>
    <% end %>
  </div>
</div>
