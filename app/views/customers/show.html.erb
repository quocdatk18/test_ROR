<h2 style='text-align: center;'>DEtails Customer</h2>
<% if @customer.nil? %>
  <h2>Undefined Customer</h2>
<% else %>
  <table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Title</th>
    <th>Email</th>
    <th>Visits</th>
    <th>Order Count</th>
    <th>Lock Version</th>
  </tr>
  <tr>
    <td><%= @customer[:first_name]  %></td>
    <td><%= @customer[:last_name] %></td>
    <td><%= @customer[:title] %></td>
    <td><%= @customer[:email] %></td>
    <td><%= @customer[:visits] %></td>
    <td><%= @customer[:orders_count] %></td>
    <td><%= @customer[:lock_version] %></td>
  </tr>
<% end %>
